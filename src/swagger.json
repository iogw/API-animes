{
  "swagger": "2.0",
  "info": {
    "description": "API to manage anime seiyuus",
    "version": "1.0.0",
    "title": "API of Animes Seiyuus"
  },
  "host": "anime-seiyuus.onrender.com",
  "basePath": "/",
  "tags": [
    {
      "name": "animes",
      "description": "Operations about anime"
    },
    {
      "name": "users",
      "description": "Operations about users"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/animes": {
      "get": {
        "tags": ["animes"],
        "summary": "Get all animes",
        "description": "Get all entry in database.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Animes-GET"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "post": {
        "tags": ["animes"],
        "summary": "Create new anime",
        "description": "Create new entry with anime data.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Authorization",
            "type": "string",
            "in": "header",
            "description": "Token received when signup/login",
            "required": false
          },
          {
            "name": "Data",
            "type": "object",
            "in": "body",
            "description": "New anime data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Animes-POST"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "invalid title/year/chapters supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "401": {
            "description": "not provided/invalid token",
            "schema": {
              "$ref": "#/definitions/error-token"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    },
    "/animes/{id}": {
      "get": {
        "tags": ["animes"],
        "summary": "Find anime by ID",
        "description": "Returns information about the specified anime.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "type": "integer",
            "in": "path",
            "description": "Anime ID to consult",
            "required": true,
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/AnimeID-GET"
            }
          },
          "400": {
            "description": "invalid ID supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "anime not found",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "put": {
        "tags": ["animes"],
        "summary": "Update an existing anime",
        "description": "Update the details of an existing anime using its ID.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Authorization",
            "type": "string",
            "in": "header",
            "description": "Token received when signup/login",
            "required": false
          },
          {
            "name": "id",
            "type": "integer",
            "in": "path",
            "description": "Anime ID",
            "required": true,
            "format": "int64"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Info that needs to be update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Animes-POST"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/AnimeID-PUT"
            }
          },
          "400": {
            "description": "invalid ID/title/year/chapters supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "anime not found",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "401": {
            "description": "not provided/invalid token",
            "schema": {
              "$ref": "#/definitions/error-token"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      },
      "delete": {
        "tags": ["animes"],
        "summary": "Deletes an anime",
        "description": "Deletes an anime by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Authorization",
            "type": "string",
            "in": "header",
            "description": "Token received when signup/login",
            "required": false
          },
          {
            "name": "id",
            "type": "integer",
            "in": "path",
            "description": "Anime ID",
            "required": true,
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "msg": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "invalid ID supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "404": {
            "description": "anime not found",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "401": {
            "description": "not privided/invalid token",
            "schema": {
              "$ref": "#/definitions/error-token"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "tags": ["users"],
        "summary": "Register a new user",
        "description": "Creates a new user in the sistem",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Data user to sign up",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/UserSigned"
            }
          },
          "400": {
            "description": "invalid username/email/password supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["users"],
        "summary": "Logs user into the system",
        "description": "",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Data to login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/UserLogged"
            }
          },
          "400": {
            "description": "invalid email/password supplied",
            "schema": {
              "$ref": "#/definitions/error"
            }
          },
          "500": {
            "description": "database error",
            "schema": {
              "$ref": "#/definitions/error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Animes-GET": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "info": {
          "type": "object",
          "properties": {
            "count": { "type": "integer" }
          }
        },
        "results": {
          "type": "array",
          "items": {
            "type": "object",

            "properties": {
              "idAnime": {
                "type": "integer",
                "format": "int64"
              },
              "title": {
                "type": "string"
              },
              "year": {
                "type": "integer"
              },
              "chapters": {
                "type": "integer"
              }
            }
          }
        }
      }
    },

    "Animes-POST": {
      "type": "object",
      "required": ["title", "year", "chapters"],
      "properties": {
        "title": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        },
        "chapters": {
          "type": "integer"
        }
      }
    },

    "AnimeID-GET": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "results": {
          "type": "object",
          "properties": {
            "idAnime": {
              "type": "integer",
              "format": "int64"
            },
            "title": {
              "type": "string"
            },
            "year": {
              "type": "integer"
            },
            "chapters": {
              "type": "integer"
            }
          }
        }
      }
    },

    "AnimeID-PUT": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "msg": { "type": "string" },
        "previous data": {
          "type": "object",
          "properties": {
            "idAnime": {
              "type": "integer",
              "format": "int64"
            },
            "title": {
              "type": "string"
            },
            "year": {
              "type": "integer"
            },
            "chapters": {
              "type": "integer"
            }
          }
        },
        "new data": {
          "type": "object",
          "properties": {
            "idAnime": {
              "type": "integer",
              "format": "int64"
            },
            "title": {
              "type": "string"
            },
            "year": {
              "type": "integer"
            },
            "chapters": {
              "type": "integer"
            }
          }
        }
      }
    },

    "User": {
      "type": "object",
      "required": ["username", "email", "password"],
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Login": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "UserSigned": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "token": { "type": "string" },
        "id": { "type": "number" }
      }
    },
    "UserLogged": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "token": { "type": "string" },
        "username": { "type": "string" }
      }
    },
    "error": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "error": { "type": "string" }
      }
    },
    "error-token": {
      "type": "object",
      "properties": {
        "error": { "type": "string" }
      }
    }
  }
